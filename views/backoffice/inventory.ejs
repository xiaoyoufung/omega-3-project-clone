<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/backofficestyle.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>COOC Admin : Inventory</title>
</head>
<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <!-- sidebar -->
            <%- include('../templates/backoffice/dashboard') %>

            <div id="main" class="col">
                <table class="table">
                    <thead class="sticky-top">
                        <tr>
                            <th scope="col">Product ID</th>
                            <th scope="col">Product Name</th>
                            <th scope="col">Product Image</th>
                            <th scope="col">Category ID</th>
                            <th scope="col">Tag</th>
                            <th scope="col">Price</th>
                            <th scope="col">Price-Promo</th>
                            <th scope="col">Sales Count</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Sample data -->
                        <form action="/submit" method="post">

                            <% for (let i = 0; i < newListItems.length; i++) { %>
                            <tr>
                                <td><%= products[i].product_id %></td>
                                <td><input type="text" value="<%= products[i].product_name %>" class="form-control"></td>
                                <td class="prod-img">
                                    <div class="img-container">
                                        <span><img class="img-show" src="<%= products[i].product_image %>" alt="product"></span>
                                        <span><input class="img-url form-control" type="url" value="<%= products[i].product_image %>"></span>
                                    </div>
                                </td>
                                <td>
                                    <select type="number" class="form-control" size="1">
                                        <option value="1">Tops</option>
                                        <option value="2">Bottoms</option>
                                        <option value="3">Shoes</option>
                                    </select>
                                </td>
                                <td>
                                    <select type="text" class="form-control">
                                        <option value="">(-)</option>
                                        <option value="New">New</option>
                                        <option value="Sale">Sale</option>
                                        <option value="New">Limited</option>
                                    </select>
                                </td>
                                <td><input type="number" value="200.00" class="form-control"></td>
                                <td><input type="number" value="180.00" class="form-control"></td>
                                <td>100</td>
                                <td>
                                    <div class="btn-container">
                                        <button class="btn item-edit" type="submit"><i class="bi bi-pencil-square"></i> Save</button>
                                        <button class="btn item-delete" type="submit"><i class="bi bi-trash"></i> Delete</button>    
                                    </div>
                                </td>
                            </tr>
                            <% } %>

                            <tr>
                                <td>2</td>
                                <td><input type="text" value="Shirt2" class="form-control"></td>
                                <td class="prod-img">
                                    <div class="img-container">
                                        <span><img class="img-show" src="https://cdn.discordapp.com/attachments/1216787767233609818/1216788510846095410/6dea9f3e09acc40503e90121e46dd274.png?ex=6601a99b&is=65ef349b&hm=ccc5d4a1e289282137ce05968e92ce57f5f82db9c6673729abee9c56232607e3&" alt="product"></span>
                                        <span><input class="img-url form-control" type="url" value="https://cdn.discordapp.com/attachments/1216787767233609818/1216788510846095410/6dea9f3e09acc40503e90121e46dd274.png?ex=6601a99b&is=65ef349b&hm=ccc5d4a1e289282137ce05968e92ce57f5f82db9c6673729abee9c56232607e3&"></span>
                                    </div>
                                </td>
                                <td>
                                    <select type="number" class="form-control" size="1">
                                        <option value="1">Tops</option>
                                        <option value="2">Bottoms</option>
                                        <option value="3">Shoes</option>
                                    </select>
                                </td>
                                <td>
                                    <select type="text" class="form-control">
                                        <option value="">(-)</option>
                                        <option value="New">New</option>
                                        <option value="Sale">Sale</option>
                                        <option value="New">Limited</option>
                                    </select>
                                </td>
                                <td><input type="number" value="220.00" class="form-control"></td>
                                <td><input type="number" value="200.00" class="form-control"></td>
                                <td>150</td>
                                <td>
                                    <div class="btn-container">
                                        <button class="btn item-edit" type="submit"><i class="bi bi-pencil-square"></i> Save</button>
                                        <button class="btn item-delete" type="submit"><i class="bi bi-trash"></i> Delete</button>    
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>newItemId</td>
                                <td><input type="text" value="newItem" class="form-control"></td>
                                <td class="prod-img">
                                    <div class="img-container">
                                        <span><img class="img-show" src="newItemUrl" alt="product"></span>
                                        <span><input class="img-url form-control" type="url" value="newItemUrl"></span>
                                    </div>
                                </td>
                                <td>
                                    <select type="number" class="form-control" size="1">
                                        <option value="1">Tops</option>
                                        <option value="2">Bottoms</option>
                                        <option value="3">Shoes</option>
                                    </select>
                                </td>
                                <td>
                                    <select type="text" class="form-control">
                                        <option value="">(-)</option>
                                        <option value="New">New</option>
                                        <option value="Sale">Sale</option>
                                        <option value="New">Limited</option>
                                    </select>
                                </td>
                                <td><input type="number" value="0.00" class="form-control"></td>
                                <td><input type="number" value="0.00" class="form-control"></td>
                                <td>0</td>
                                <td>
                                    <div class="btn-container">
                                        <button class="btn item-edit" type="submit"><i class="bi bi-pencil-square"></i> Save</button>
                                        <button class="btn item-delete" type="submit"><i class="bi bi-trash"></i> Delete</button>    
                                    </div>
                                </td>
                            </tr>

                        </form>
                    </tbody>
                </table>
                <div class="btn-container sticky-bottom">
                    <button class="btn item-add"><i class="bi bi-plus-circle-fill"></i> Add Item</button>
                </div>

                <!-- <div id="Screen-Size-Checker">
                    <div class="d-none d-xxl-block">XXL</div>
                    <div class="d-none d-xl-block d-xxl-none">XL</div>
                    <div class="d-none d-lg-block d-xl-none">LG</div>
                    <div class="d-none d-md-block d-lg-none">MD</div>
                    <div class="d-none d-sm-block d-md-none">SM</div>
                    <div class="d-block d-sm-none">XS</div>                    
                </div> -->

            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        $('.nav-link').eq(0).addClass('active');

        document.getElementById('Quantity').value = "Banana";
    </script>
</body>
</html>