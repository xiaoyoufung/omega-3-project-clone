    <title>COOC Admin : Inventory</title>
</head>
<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <!-- sidebar -->
            <%- include('../templates/backoffice/dashboard') %>

            <div id="main" class="col">
                <table class="table">
                    <thead class="sticky-top">
                        <tr>
                            <th scope="col">Product ID</th>
                            <th scope="col">Product Name</th>
                            <th scope="col">Product Image</th>
                            <th scope="col">Category ID</th>
                            <th scope="col">Tag</th>
                            <th scope="col">Price</th>
                            <th scope="col">Price-Promo</th>
                            <th scope="col">Sales Count</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Sample data -->
                        <form action="/submit" method="post">

                            <% for (let i = 0; i < products.length; i++) { %>
                            <tr>
                                <td><%= products[i].product_id %></td>
                                <td><input type="text" value="<%= products[i].product_name %>" class="form-control"></td>
                                <td class="prod-img">
                                    <div class="img-container">
                                        <span><img class="img-show" src="<%= products[i].product_image %>" alt="product"></span>
                                        <span><input class="img-url form-control" type="url" value="<%= products[i].product_image %>"></span>
                                    </div>
                                </td>
                                <td>
                                    <select type="number" class="form-control" size="1">

                                        <!-- ถ้าช่วย optimize โดยใช้ loop เช้ามาช่วยได้จะดีมาก -->
                                        <% if( products[i].category_id == 1 ) { %>
                                            <option value="1" selected="selected">1 (Tops)</option>
                                            <option value="2">2 (Bottoms)</option>
                                            <option value="3">3 (Shoes)</option>
                                        <% } else if( products[i].category_id == 2 ) { %>
                                            <option value="1">1 (Tops)</option>
                                            <option value="2" selected="selected">2 (Bottoms)</option>
                                            <option value="3">3 (Shoes)</option>
                                        <% } else if( products[i].category_id == 3 ) { %>
                                            <option value="1">1 (Tops)</option>
                                            <option value="2">2 (Bottoms)</option>
                                            <option value="3"selected="selected">3 (Shoes)</option>
                                        <% } else { %>
                                            <option value="1">1 (Tops)</option>
                                            <option value="2">2 (Bottoms)</option>
                                            <option value="3">3 (Shoes)</option>
                                        <% } %>

                                    </select>
                                </td>
                                <td>
                                    <select type="text" class="form-control">

                                        <!-- ถ้าช่วย optimize โดยใช้ loop เช้ามาช่วยได้จะดีมาก -->
                                        <% if( products[i].product_tag == '' ) { %>
                                            <option value="" selected="selected">(-)</option>
                                            <option value="New">New</option>
                                            <option value="Sale">Sale</option>
                                            <option value="New">Limited</option>
                                        <% } else if( products[i].product_tag == 'New' ) { %>
                                            <option value="">(-)</option>
                                            <option value="New" selected="selected">New</option>
                                            <option value="Sale">Sale</option>
                                            <option value="New">Limited</option>
                                        <% } else if( products[i].product_tag == 'Sale' ) { %>
                                            <option value="">(-)</option>
                                            <option value="New">New</option>
                                            <option value="Sale" selected="selected">Sale</option>
                                            <option value="New">Limited</option>
                                        <% } else if( products[i].product_tag == 'Limited' ) { %>
                                            <option value="">(-)</option>
                                            <option value="New">New</option>
                                            <option value="Sale">Sale</option>
                                            <option value="New" selected="selected">Limited</option>
                                        <% } else { %>
                                            <option value="">(-)</option>
                                            <option value="New">New</option>
                                            <option value="Sale">Sale</option>
                                            <option value="New">Limited</option>
                                        <% } %>
                                        
                                    </select>
                                </td>
                                <td><input type="number" value="<%= products[i].product_price %>" class="form-control"></td>
                                <td><input type="number" value="<%= products[i].product_price_promotion %>" class="form-control"></td>
                                <td><%= products[i].product_sales_count %></td>
                                <td>
                                    <div class="btn-container">
                                        <button class="btn item-edit" type="submit"><i class="bi bi-pencil-square"></i> Save</button>
                                        <button class="btn item-delete" type="submit"><i class="bi bi-trash"></i> Delete</button>    
                                    </div>
                                </td>
                            </tr>
                            <% } %>

