<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>COOC</title>
    <link rel="stylesheet" href="./css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
</head>
<body >

  <!-- Modal (Side Menu) -->
  <%- include('../templates/frontend/modal') %>

  <!-- Main Body -->
  <div id="main">
        
    <!-- NavBar -->
    <div id="nav">
      <div class="logo fixed-top">
          <a href="/">COOC</a>
      </div>
      <nav class="navbar fixed-top">
        <%- include('../templates/frontend/navbar') %>
      </nav>
    </div>
    

    <!-- Top Section / Carousel -->
    <section id="top">
      <div id="top-carousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#top-carousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
          <button type="button" data-bs-target="#top-carousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
          <button type="button" data-bs-target="#top-carousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
          <button type="button" data-bs-target="#top-carousel" data-bs-slide-to="3" aria-label="Slide 4"></button>
        </div>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="./Picture/Whatnew1.jpg" class="d-block w-100" alt="0">
          </div>
          <div class="carousel-item">
            <img src="./Picture/Whatnew2.jpg" class="d-block w-100" alt="1">
          </div>
          <div class="carousel-item">
            <img src="./Picture/Whatnew3.jpg" class="d-block w-100" alt="2">
          </div>
          <div class="carousel-item">
            <img src="./Picture/Whatnew4.jpg" class="d-block w-100" alt="3">
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#top-carousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#top-carousel" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </section>

    <!-- Recommend Section -->
    <section id="recommend" class="Recommend row no-gutters">
      <div class="col-sm-12">
        <h1>Recommend</h1>
        <div id="recommend-carousel" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">

            <!-- Default Carousel -->
            <div class="carousel-item active">
              <div class="container-fluid row no-gutters">
                <div class="col-lg-6 col-md-12"><img src="<%= products[0].product_image %>" alt="Recommended"></div>
                <div class="text-block col-lg-6 col-md-12">
                  <div class="item-text">
                    <p class="item-name"><b><%= products[0].product_name %></b></p>
                    <h3 class="item-type">T-Shirt</h3>
                  </div>
                  <div class="item-info ">
                    <p class="tag"><%= products[0].product_tag %></p>
                    <div class="price"><%= products[0].product_price %> THB
                      <div class="icons">
                        <a href="/add-to-cart/<%= products[0].product_id %>"><i class="bi bi-cart"></i></a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% for (let i = 1; i < 3; i++) { %>
            <div class="carousel-item">
              <div class="container-fluid row no-gutters">
                <div class="col-lg-6 col-md-12"><img src="<%= products[i].product_image %>" alt="Recommended"></div>
                <div class="text-block col-lg-6 col-md-12">
                  <div class="item-text">
                    <p class="item-name"><b><%= products[i].product_name %></b></p>
                    <h3 class="item-type">T-Shirt</h3>
                  </div>
                  <div class="item-info ">
                    <p class="tag"><%= products[i].product_tag %></p>
                    <div class="price"><%= products[i].product_price %> THB
                      <div class="icons">
                        <a href="/add-to-cart/<%= products[i].product_id %>"><i class="bi bi-cart"></i></a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <% } %>
            

          </div>
          <a class="carousel-control-prev" href="#recommend-carousel" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#recommend-carousel" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </section>

    <!-- Top-Seller Section -->
    <section id="topSeller" class="Top-Seller row no-gutters">
      <div class="col-sm-12">
        <h1>Top Seller</h1>
        <div class="container-fluid">
          <div class="img-container row no-gutters">
            <% for (let i = 3; i < 6; i++) { %>
            <div class="item col-lg-4 col-sm-12">
              <img src="<%= products[i].product_image %>" alt="Top-Seller">
              <div class="icons">
                <a href="/add-to-cart/<%= products[i].product_id %>"><i class="bi bi-cart"></i></a>
              </div>
            </div>
            <% } %>
          </div>
          <a href="/product"><button button class="btn" type="submit">View All</button></a>
        </div> 
      </div>
    </section>
  </div>

  <!-- Footer -->
  <%- include('../templates/frontend/footer') %>
  
  <!-- Script -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      console.log("JS is working!");

      $(".nav-item").click(function(){
        $("#menu").modal('hide');
      });

      $(window).scroll(function(){
        if ($(this).scrollTop() > 1) {
          $('.navbar').addClass('white');
          $('.logo').addClass('animated');
        } else {
          $('.navbar').removeClass('white');
          $('.logo').removeClass('animated');
        }
      });
    });
  </script>
  <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>