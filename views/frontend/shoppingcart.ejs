<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping cart</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
        integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="./css/style.css">
    <link rel="stylesheet" href="./css/shoppingcart.css">

    <style>
        body {
            padding-top: 50px;
            /* Adjust based on the actual height of your fixed navbar */
        }

        #secondNav {
            margin-top: 50px;
            /* Adjust this value based on your first navbar's height */
        }
    </style>
</head>

<body>

    <!-- Modal (Side Menu) -->
    <%- include('../templates/frontend/modal') %>

    <!-- Main Body -->
    <div id="main">
        <!-- NavBar -->
        <div id="nav">
            <nav class="navbar fixed-top white">
                <%- include('../templates/frontend/navbar') %>

                <!-- second nav -->
                <div class="container-fluid" id="secondNav">
                    <nav class="nav nav-shopping nav-pills nav-justified w-100">
                        <div class="editnav container-fluid">
                            <button class="navbar-toggler" type="button" onclick="window.history.go(-1);">
                                <i class="bi bi-arrow-left"></i>
                            </button>
                            <h1>Shopping Cart</h1>
                        </div>
                    </nav>
                </div>
            </nav>
        </div>
    </div>


    <!-- item list -->
    <div id="item-list" class="container">
        <div class="row">
            <div class="col-12">
                <div class="table-responsive w-100">
                    <table class="table rounded-table">
                        <thead>
                            <tr>
                                <th scope="col">Product</th>
                                <th scope="col">Price</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="item">
                                    <div>
                                        <img src="./Picture/Blackpants.jpg" alt="product" class="img-fluid">
                                    </div>
                                    <div class="item-info">
                                        <h5>productName</h5>
                                        <p>productCategory</p>
                                    </div>
                                </td>
                                <td clas="price">
                                    <s>$100.00</s>
                                    $79.00
                                </td>
                                <td >
                                    <div class="qty">
                                        <button id="decrement" class="btn-qty"><i class="bi bi-dash"></i></i></button>
                                        <span id="product_quantity" class="quantityNum">| 1 |</span>
                                        <button id="increment" class="btn-qty"><i class="bi bi-plus"></i></i></button>
                                        <button id="delete" class="btn-delete"><i class="bi bi-trash"></i></button>
                                    </div>
                                </td>
                                <td>$79.00</td>
                            </tr>
                            <tr>
                                <td class="item">
                                    <div>
                                        <img src="./Picture/Blackpants.jpg" alt="product" class="img-fluid">
                                    </div>
                                    <div class="item-info">
                                        <h5>productName</h5>
                                        <p>productCategory</p>
                                    </div>
                                </td>
                                <td clas="price">
                                    <s>$100.00</s>
                                    $79.00
                                </td>
                                <td >
                                    <div class="qty">
                                        <button id="decrement" class="btn-qty"><i class="bi bi-dash"></i></i></button>
                                        <span id="product_quantity" class="quantityNum">| 1 |</span>
                                        <button id="increment" class="btn-qty"><i class="bi bi-plus"></i></i></button>
                                        <button id="delete" class="btn-delete"><i class="bi bi-trash"></i></button>
                                    </div>
                                </td>
                                <td>$79.00</td>
                            </tr>
                            <tr>
                                <td></td>
                                <td></td>
                                <td><b>TOTAL</b></td>
                                <td>$158.00</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <%- include('../templates/frontend/footer') %>

    <!-- Script -->
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            console.log("JS is working!");
            $('.navbar').addClass('white');
            $('.logo').addClass('animated');

            $(".nav-item").click(function () {
                $("#menu").modal('hide');
            });
        });
    </script>
    <script
        src="https://code.jquery.com/jquery-3.7.1.js"
        integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4="
        crossorigin="anonymous">
    </script>
    <script 
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous">
    </script>
</body>
</html>